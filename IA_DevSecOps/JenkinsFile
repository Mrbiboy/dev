pipeline {
    agent any

    environment {
        PYTHON_VENV = "/var/jenkins_home/venv"
    }

    stages {
        stage('User Input') {
            steps {
                script {
                    env.GITHUB_REPO_URL = input(
                        message: 'üîó Entrez le lien du d√©p√¥t GitHub √† scanner :',
                        ok: 'Lancer le Scan',
                        parameters: [
                            string(name: 'GITHUB_REPO_URL', defaultValue: 'https://github.com/Mrbiboy/dev.git', description: 'Lien du d√©p√¥t GitHub')
                        ]
                    )
                }
            }
        }

        stage('Checkout') {
            steps {
                echo "üì• Clonage du d√©p√¥t GitHub: ${env.GITHUB_REPO_URL}..."
                sh '''
                    rm -rf IA_DevSecOps || true
                    git clone ${GITHUB_REPO_URL} IA_DevSecOps
                '''

                echo "üìÇ Affichage du contenu du d√©p√¥t apr√®s clonage"
                sh 'ls -R IA_DevSecOps'
            }
        }

        stage('Run Extraction Files') {
            steps {
                echo "üîç Extraction des fichiers..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    cd IA_DevSecOps
                    python3 extraction.py
                '''
            }
        }

        stage('Verify Configuration Files') {
            steps {
                echo "üìÇ V√©rification des fichiers dans configurations/"
                sh '''
                    if [ -d "IA_DevSecOps/configurations" ]; then
                        ls -l IA_DevSecOps/configurations/
                    else
                        echo "‚ùå Le dossier configurations/ n'existe pas !"
                        exit 1
                    fi
                '''
            }
        }

        stage('Fix Permissions') {
            steps {
                echo "üîë Correction des permissions"
                sh 'chmod -R 777 IA_DevSecOps/configurations/'
            }
        }

        stage('Run Terraform Analysis') {
            steps {
                echo "üîç Analyse Terraform..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    cd IA_DevSecOps
                    python3 analyze_terraform.py
                '''
            }
        }

        stage('Run Dockerfile Analysis') {
            steps {
                echo "üîç Analyse Dockerfile..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    cd IA_DevSecOps
                    python3 analyze_dockerfile.py
                '''
            }
        }

        stage('Run YAML Analysis') {
            steps {
                echo "üîç Analyse YAML..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    cd IA_DevSecOps
                    python3 analyze_k8s.py
                '''
            }
        }

        stage('Check JSON Reports') {
            steps {
                echo "üìÑ V√©rification du contenu des fichiers JSON"
                sh '''
                    ls -l IA_DevSecOps/*.json || echo "‚ùå Aucun fichier JSON valide trouv√© !"
                '''
            }
        }

        stage('Archive Reports') {
            steps {
                echo "üì¶ Archivage des rapports JSON..."
                archiveArtifacts artifacts: 'IA_DevSecOps/*.json', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline termin√© avec succ√®s !"
        }
        failure {
            echo "‚ùå Erreur dans le pipeline. V√©rifiez les logs."
        }
    }
}
