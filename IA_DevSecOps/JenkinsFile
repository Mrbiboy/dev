pipeline {
    agent any

    environment {
        PYTHON_VENV = "/var/jenkins_home/venv"  // ‚úÖ Utilisation de ton venv existant
    }

    stages {
        stage('Checkout') {
            steps {
                echo "üì• Clonage du d√©p√¥t GitHub..."
                git branch: 'main', url: 'https://github.com/Mrbiboy/dev.git'
            }
        }

        stage('Run Terraform Analysis') {
            steps {
                echo "üîç Analyse Terraform..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    python3 IA_DevSecOps/analyze_terraform.py
                '''
            }
        }

        stage('Run Dockerfile Analysis') {
            steps {
                echo "üîç Analyse Dockerfile..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    python3 IA_DevSecOps/analyze_dockerfile.py
                '''
            }
        }

        stage('Run YAML Analysis') {
            steps {
                echo "üîç Analyse YAML..."
                sh '''
                    . $PYTHON_VENV/bin/activate
                    python3 IA_DevSecOps/analyze_yaml.py
                '''
            }
        }

        stage('Archive Reports') {
            steps {
                echo "üì¶ Archivage des rapports JSON..."
                archiveArtifacts artifacts: '**/*.json', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline termin√© avec succ√®s !"
        }
        failure {
            echo "‚ùå Erreur dans le pipeline. V√©rifiez les logs."
        }
    }
}
